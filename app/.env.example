# Ekhaya Intel Trading HR System - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Main HR System Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/ekhaya_hr"

# Car Wash CRM Database (PostgreSQL)
CAR_WASH_DATABASE_URL="postgresql://username:password@host:5432/carwash_db"

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# NextAuth.js Secret (Generate a random string)
# You can generate one at: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"

# NextAuth URL (Your application URL)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# API KEYS & SECRETS
# =============================================================================

# Car Wash CRM API Key (Generate a secure random key)
CAR_WASH_API_KEY="your-secure-car-wash-api-key-here"

# Admin Default Password (for database seeding)
ADMIN_DEFAULT_PASSWORD="your-secure-admin-password-here"

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Configuration for sending emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node Environment
NODE_ENV="development"

# Application Port
PORT="3000"

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and API keys
# 3. Rotate secrets regularly in production
# 4. Use environment-specific values for different deployments
# 5. Consider using a secrets management service in production

# =============================================================================
# PRODUCTION DEPLOYMENT NOTES
# =============================================================================

# For production deployment:
# 1. Set NODE_ENV="production"
# 2. Use HTTPS URLs for NEXTAUTH_URL
# 3. Use production database URLs with SSL
# 4. Generate new, secure secrets for production
# 5. Enable database SSL mode: ?sslmode=require
